    "listAuthServers": "node -r dotenv/config ./scripts/list-auth-servers.js",
    "saveCreds": "node -r dotenv/config ./scripts/add-client-credentials.js",
    "updateAuthServersAndOpenIds": "node -r dotenv/config ./scripts/update-auth-server-and-open-id-configs",
    "registerConfigs": "node -r dotenv/config ./scripts/register-aspsp-client-config",
